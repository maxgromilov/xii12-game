section.section-catalog
    .section-catalog__container
        h3.section-catalog__title Каталог игр
        a.section-catalog__all-game(href="/games") Показать все игры
        
    .section-catalog__container
        #main-carousel.section-catalog__carousel
            each game in catalog
                .catalog__item
                    .catalog__item__bg(class="text-"+ game.color + "-400")
                        svg(viewbox='0 0 906 1178', xmlns='http://www.w3.org/2000/svg')
                                path(fill='currentColor', d='M906 1153.51V25.3985C906 7.68632 887.782 -4.16862 871.592 3.00877L14.564 382.945C5.7092 386.871 0 395.646 0 405.335V1153.51C0 1167.04 10.963 1178 24.4865 1178H881.514C895.037 1178 906 1167.04 906 1153.51Z')

                    .catalog__item__content
                        a.catalog__item__image(href=game.link)
                            img.w-full(src=game.image, alt="")
                        .catalog__item__name #{game.name}
                        .catalog__item__text #{game.text}
                        .catalog__item__footer
                            .catalog__item__stars.flex
                                - var n = 0
                                - var stars = game.stars
                                while n < stars
                                    - n++
                                    .catalog__item__star 
                                        svg(width='24', height='23', fill='none', xmlns='http://www.w3.org/2000/svg')
                                            path( fill='currentColor', d='M23.845 8.564a1.645 1.645 0 00-1.33-1.12l-6.278-.913L13.428.846c-.554-1.125-2.394-1.125-2.948 0L7.672 6.53l-6.265.913a1.643 1.643 0 00-.909 2.805l4.542 4.415-1.07 6.248a1.649 1.649 0 00.654 1.61 1.65 1.65 0 001.733.123l5.597-2.951 5.613 2.951c.24.127.503.19.765.19.34 0 .68-.106.97-.313.506-.37.76-.993.654-1.61l-1.07-6.248 4.541-4.415c.449-.434.611-1.09.418-1.685z')

                                - var n = 0
                                - var stars = 5 - game.stars
                                while n < stars 
                                    - n++
                                    .catalog__item__star.opacity-50
                                        svg(width='24', height='23', fill='none', xmlns='http://www.w3.org/2000/svg')
                                            path( fill='currentColor', d='M23.845 8.564a1.645 1.645 0 00-1.33-1.12l-6.278-.913L13.428.846c-.554-1.125-2.394-1.125-2.948 0L7.672 6.53l-6.265.913a1.643 1.643 0 00-.909 2.805l4.542 4.415-1.07 6.248a1.649 1.649 0 00.654 1.61 1.65 1.65 0 001.733.123l5.597-2.951 5.613 2.951c.24.127.503.19.765.19.34 0 .68-.106.97-.313.506-.37.76-.993.654-1.61l-1.07-6.248 4.541-4.415c.449-.434.611-1.09.418-1.685z')
                            a.catalog__item__link(href=game.link)
                                svg(width='18', height='14', fill='none', xmlns='http://www.w3.org/2000/svg')
                                    path(d='M10.796 1L17 7m0 0l-6.204 6M17 7H1', stroke='currentColor', stroke-linecap='round')

                        .catalog__item__content__bg(class="bg-"+ game.color + "-400")
        

